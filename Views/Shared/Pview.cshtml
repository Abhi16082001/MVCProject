@model IEnumerable<FirstTasks.Models.Employee>
@{
    var counts = Session["Count"] as Dictionary<string, int>;
}

<table class="table table-bordered table-striped" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Designation</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Phone</td>
                <td>@emp.Email</td>
                <td>@emp.Designation</td>
                <td>@emp.Department</td>
                <td>
                    <a href="@Url.Action("EditEmp", "Employee", new { id = emp.Eid })">
                        <img src="~/images/page_white_edit.png" alt="E" />
                    </a>
                    &nbsp;
                    <a id="delete" data-id="@emp.Eid">
                        <img src="~/images/delete.png" alt="D" />
                    </a>
                    &nbsp;
                    <a class="view-btn" data-emp='@Html.Raw(Json.Encode(emp))'>
                        <img src="~/images/eye.png" alt="V" />
                    </a>
                </td>
            </tr>


        }
        @if (Convert.ToInt32(Session["rows"]) < @counts["EmpCount"])
        {
            <tr>
                <td id="loadmore" align="center" colspan="6">
                    <a href=""> Load More</a>
                </td>
            </tr>
        }
    </tbody>
</table>


